  <div class="block" id="block-login">
    <div class="secondary-navigation">
      <ul>
        <li class="active"><%= link_to 'Log In', login_path %></li>
      </ul>
      <div class="clear">
        <span><img alt="user_login" src="images/user_login.png"  align="right" /></span>
      </div>
    </div>          
    <div class="content login">          
      <h2 class="title">Log In</h2>
      
      <div class="inner">
        <div class="grouping">
          <% form_for :user_session, :url => user_sessions_path, :html => { :class => :form } do |f| -%>
            <%= render :partial => "form", :locals => {:f => f} %>
          <% end -%>
	</div>
      </div>
    </div>
  </div>

