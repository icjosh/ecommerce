<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', products_path  %></li>
      <li><%= link_to 'New', new_product_path %></li>
      <li class="active"><%= link_to 'Edit', edit_product_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title">Edit Product</h2>
    <div class="inner">
      <div class="grouping">
	<% form_for @product, :url => product_path(@product), :html => { :class => :form } do |f| -%>
          <%= render :partial => "form", :locals => {:f => f} %>
	<% end -%>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
