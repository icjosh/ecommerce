<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', products_path %></li>
      <li><%= link_to 'New', new_product_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Products</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">Image</th>
          <th>Title</th>
          <th>Price</th>
          <th>Description</th>
          <th></th>
          <th class="last">&nbsp;</th>
        </tr>

        <% @products.each do |product| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <div class="left">
            <%= image_tag(product.image_url, :align => "left", :width => 80, :height => 80) %></div>
          </td>
          <td>
            <%= link_to product.title, product_path(product) %>
          </td>
          <td>
            <%= number_to_currency(product.price) %>
          </td>
          <td>
            <%=h truncate(product.description, 80) %>
          </td>
          <td>
            <a href="#">
              <img alt="Add to Cart" src="/images/cart/cart_add.png" />
            </a>
          </td>
          <td class="last">
            <%= link_to 'show', product_path(product) %> |
            <%= link_to 'edit', edit_product_path(product) %> |
            <%= link_to 'destroy', product_path(product), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
      </div>

      <%= will_paginate @products %>

      <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
