  <% if !f.error_messages.empty? %>
    <div class="flash">
      <div class="message error">
        <p><%= f.error_messages %></p>
      </div>
    </div>
  <% end %>
  <div class="group">
    <%= f.label :title, "Title", :class => :label %>
    <%= f.text_field :title, :class => 'text_field' %>
    <span class="description">Ex: Creative Labs MP3 Player</span>
  </div>

  <div class="group">
    <%= f.label :price, "Price", :class => :label %>
    <%= f.text_field :price, :class => 'text_field' %>
    <span class="description">Ex: 75.00</span>
  </div>

  <div class="group">
    <%= f.label :description, "Description", :class => :label %>
    <%= f.text_area :description, :class => 'text_area' %>
    <span class="description">Ex: A very useful and nice MP3 player</span>
  </div>

  <div class="group">
    <%= f.label :image_url, "Image url", :class => :label %>
    <%= f.text_field :image_url, :class => 'text_field' %>
    <span class="description">Ex: http://flickr.com/images/25.jpg</span>
  </div>
        
<div class="group navform">
  <input type="submit" class="button" value="Save &rarr;" /> or <%= link_to 'Cancel', products_path %>
</div>
