<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', products_path  %></li>
      <li><%= link_to 'New', new_product_path %></li>
      <li class="active"><%= link_to 'Show', product_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b>Title:</b>
          <%= @product.title %>
        </p>

        <p>
          <b>Price:</b>
          <%= number_to_currency(@product.price) %>
        </p>

        <p>
          <b>Description:</b>
          <%= @product.description %>
        </p>

        <p>
          <b>Image:</b>
          <%= @product.image_url %>
          <p/>
          <%= image_tag(
                        @product.image_url, :width => "192", :height => "192"
          ) %>
        </p>
      <%= link_to 'Edit', edit_product_path(@product) %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
